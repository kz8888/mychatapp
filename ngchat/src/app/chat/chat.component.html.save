<div>
    <ul>
        <li *ngFor="let message of messages" key = {message.id} >
            ({message.timestamp}) <strong>{message.author}: </strong>{message.text}
        </li>
    </ul>
    <form #msgForm="ngForm" (ngSubmit)={handleSubmit()}>
        <input type="text" id="authorInput" [(ngModel)]="msgData.author" name="author" placeholder="Type your name here..." required=""/>
        <input type="text" id="messageInput" [(ngModel)]="msgData.text" name="text" placeholder="Type your message here..." required=""/>
        <button id="btnPost">Post Message</button>
    </form>
</div>